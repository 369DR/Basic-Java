    /**
     * Creates new form Penilaian_GUI
     */
    
public void bacaTableNilai(){        
    try {
        // Menggunakan ResultSet dengan tipe scrollable
        s = conn.createStatement(
            ResultSet.TYPE_SCROLL_INSENSITIVE, 
            ResultSet.CONCUR_READ_ONLY
        );
        String sql = "SELECT * FROM nilai";
        rs = s.executeQuery(sql);
        ResultSetMetaData m = rs.getMetaData();
        int kolom = m.getColumnCount();
        int baris = 0;
        
        // Menghitung jumlah baris
        while (rs.next()) {
            baris = rs.getRow();
        }
        
        // Menyiapkan array untuk menampung data
        datanilai = new Object[baris][kolom];
        int x = 0;
        rs.beforeFirst();  // Kembali ke awal ResultSet
        while (rs.next()) {
            datanilai[x][0] = rs.getString("npm");
            datanilai[x][1] = rs.getString("nama");
            datanilai[x][2] = rs.getString("absen");
            datanilai[x][3] = rs.getString("tugas");
            datanilai[x][4] = rs.getString("uts");
            datanilai[x][5] = rs.getString("uas");
            datanilai[x][6] = rs.getString("total");
            datanilai[x][7] = rs.getString("grade");
            x++;
        }
        // Menampilkan data di JTable
        jTable1.setModel(new DefaultTableModel(datanilai, label));
    } catch (SQLException e) {
        JOptionPane.showMessageDialog(null, e);
    }
}

